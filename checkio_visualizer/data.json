# A sample data file to store your CheckiO progress.

from tabulate import tabulate

# Example data
data = [
    {"name": "Fizz Buzz", "difficulty": "easy", "completed": "2025-01-10"},
    {"name": "Multiply Digits", "difficulty": "medium", "completed": "2025-01-15"},
    {"name": "The Stones", "difficulty": "hard", "completed": "2025-01-20"},
]

def display_table(data):
    table = [
        [mission["name"], mission["difficulty"], mission["completed"]]
        for mission in data
    ]
    print(tabulate(table, headers=["Mission", "Difficulty", "Completion Date"], tablefmt="grid"))
